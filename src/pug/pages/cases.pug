  //begin content
  section.main.cases
    //begin top-section
    .top-block
      .container-lg(style="background-image:url('assets/img/bg-cases-top.jpg')")
        include ../elements/breadcrumbs
        include ../elements/magnific
        include ../elements/top-block-mouse

        .container
          h2.top-block__title
            |Кейсы
            br
            |наших клиентов
    //end top-section

