extends ../_template

mixin cases-row(title,image,textTitle,name,position,descr)
  //begin cases row
  .cases__row
    .cases__item.cases-img
      h3.cases-img__title.cases-img__title-grey= title
      .cases-img__inn
        h3.cases-img__title.cases-img__title-white= title
        img(src="assets/img/" + image alt="cases")

    .cases__item.cases-text
      h3.cases-text__title= textTitle
      h4.cases-text__name
        span= name
        =" "
        = position
      p= descr
      a(href="#").cases-text__link подробнее
  //end cases row

block variables
  - var title = 'Кейсы'
  - var pageHeaderTitle = 'Реализованные кейсы'

block content
